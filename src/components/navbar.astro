---
const navLinks = [
    { name: "Home", href: "/" },
    { name: "Matching", href: "/matching" },
    { name: "Measuring", href: "/measuring" },
    { name: "Thermometer", href: "/thermometer" },
    { name: "Radar", href: "/radar" },
    { name: "Tentacles", href: "/tentacles" },
    { name: "Photographic", href: "/photographic" },
];
---

<nav class="navbar">
    <ul class="navbar-list">
        {navLinks.map(link => (
            <li class="navbar-item">
                <a href={link.href} class="navbar-link">{link.name}</a>
            </li>
        ))}
    </ul>
</nav>

<style>
.navbar {
    background: var(--jetlag-blue);
    padding: 1rem;
}
.navbar-list {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
}
.navbar-link {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
}
.navbar-link:hover {
    text-decoration: underline;
}
</style>