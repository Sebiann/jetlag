---
import Layout from '../layouts/Layout.astro';
import InvestigationLayout from '../layouts/Investigation.astro';
import Navbar from '../components/navbar.astro';
---

<Layout>
	<Navbar />
    <InvestigationLayout />
	<main class="investigation-container">
		<div class="investigation-header">
			<h1 class="investigation-title">MATCHING</h1>
			<button class="reset-btn">Reset</button>
		</div>
		<div class="investigation-meta">
			<span>Cost: <span class="meta-cost">Draw 3, Pick 1</span></span>
			<span>Time: <span class="meta-time">5 Minutes</span></span>
		</div>
		<hr class="investigation-divider" />
		<div class="investigation-question">Is your nearest <span class="blank">______</span> the same as my nearest <span class="blank">______</span>?</div>
		<section class="investigation-section">
			<h2>TRANSIT:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">✈️</span>Commercial Airport</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🚆</span>Transit Line</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">✏️</span>Station's Name Length</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🛣️</span>Street or Path</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>ADMINISTRATIVE DIVISIONS:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏢</span>1st Admin. Division (Kanton Zürich)</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">📍</span>2nd Admin. Division (Bezirk Zürich)</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏛️</span>3rd Admin. Division (Stadt Zürich)</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏔️</span>4th Admin. Division (Stadtkreis 9)</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
            <div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏔️</span>5th Admin. Division (Quartier Albisrieden)</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>NATURAL:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">⛰️</span>Mountain</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🗺️</span>Landmass</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🌳</span>Park</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>PLACES OF INTEREST:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🎢</span>Amusement Park</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🦁</span>Zoo</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🔥</span>Aquarium</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">⛳</span>Golf Course</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏛️</span>Museum</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🎬</span>Movie Theater</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>PUBLIC UTILITIES:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏥</span>Hospital</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">📚</span>Library</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏛️🌐</span>Foreign Consulate</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
	</main>
</Layout>

