---
import Layout from '../layouts/Layout.astro';
import InvestigationLayout from '../layouts/Investigation.astro';
import Navbar from '../components/navbar.astro';
---

<Layout>
	<Navbar />
	<InvestigationLayout />
	<main class="investigation-container">
		<div class="investigation-header">
			<h1 class="investigation-title">MEASURING</h1>
			<button class="reset-btn">Reset</button>
		</div>
		<div class="investigation-meta">
			<span>Cost: <span class="meta-cost">Draw 3, Pick 1</span></span>
			<span>Time: <span class="meta-time">5 Minutes</span></span>
		</div>
		<hr class="investigation-divider" />
		<div class="investigation-question">Compared to me, are you closer to or further from <span class="blank">______</span>?</div>
		<section class="investigation-section">
			<h2>TRANSIT:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">✈️</span> Commercial Airport</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🚄</span> A High Speed Train Line</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🚉</span> A Rail Station</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>BORDERS:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🌐</span> An International Border</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🇺🇸</span> A 1st Admin. Div. Border</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">📍</span> A 2nd Admin. Div. Border</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>NATURAL:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🌊</span> Sea Level</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">💧</span> A Body of Water</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏖️</span> A Coastline</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">⛰️</span> A Mountain</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🌳</span> A Park</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>PLACES OF INTEREST:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🎢</span> An Amusement Park</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🦁</span> A Zoo</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🔥</span> An Aquarium</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">⛳</span> A Golf Course</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏛️</span> A Museum</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🎬</span> A Movie Theater</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
		<section class="investigation-section">
			<h2>PUBLIC UTILITIES:</h2>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏥</span> A Hospital</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">📚</span> A Library</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
			<div class="investigation-row">
				<div class="investigation-label"><span class="icon">🏛️🌐</span> A Foreign Consulate</div>
				<input class="investigation-notes" placeholder="Notes" />
			</div>
		</section>
	</main>
</Layout>
